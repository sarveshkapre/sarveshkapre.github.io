---
import { tagToSlug } from '../lib/tags';

type Props = {
	tag: string;
};

const { tag } = Astro.props as Props;
const href = `/tags/${tagToSlug(tag)}/`;
---

<a class="tag" href={href}>{tag}</a>

<style>
	.tag {
		display: inline-flex;
		align-items: center;
		text-decoration: none;
		font-size: 12px;
		color: var(--muted);
		border: 1px solid var(--border);
		background: var(--panel);
		padding: 4px 10px;
		border-radius: 999px;
	}

	.tag:hover {
		color: var(--text);
	}
</style>

