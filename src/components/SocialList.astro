---
import { Icon } from "astro-icon/components";

type Props = {
	variant?: "default" | "compact";
};

const { variant = "default" } = Astro.props as Props;
const iconClass = variant === "compact" ? "h-6 w-6" : "h-8 w-8";

/** 
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Installed packs: @iconify-json/mdi, @iconify-json/simple-icons
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "Github",
		link: "https://github.com/sarveshkapre",
		name: "simple-icons:github",
	},
	{
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/sarveshkapre",
		name: "simple-icons:linkedin",
	},
	{
		friendlyName: "X",
		link: "https://x.com/_cyberhusky",
		name: "simple-icons:x",
	},
];
---

<div class="flex flex-wrap items-end gap-x-2">
	{variant === "default" ? <p>Find me on</p> : null}
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class="flex">
					<a
						class="hover:text-link inline-block"
						href={link}
						rel={`noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						<Icon aria-hidden="true" class={iconClass} focusable="false" name={name} />
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
